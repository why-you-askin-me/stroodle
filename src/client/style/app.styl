.app
    // Background color set in main.styl to affect underlying background as well

    &__demo
        height 20em
        width 30em
        margin auto

    &__header
        user-select none
        cursor default

        background-color dark-main
        color white

        width 100%
        height 38em

        display flex
        flex-direction column
        align-items center
        justify-content center

    &__title
        font-family 'Playfair Display', serif
        font-size 3em
        padding 0.5em

    &__subtitle
        font-family 'Arimo', sans-serif
        padding 0.25em

    &__steps
        display flex
        flex-direction column
        align-items center
