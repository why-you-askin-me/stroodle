.messages
    display flex
    flex-direction column

    height 100%
    width 100%

    &__message
        padding 0.5em 1.0em
        margin 0.5em
        border-radius 2em
        background-color #494
        color light-main
        max-width 10em
        font-family 'Arimo', sans-serif

        position relative

        &:before 
            content "" 
            position absolute 
            z-index 1 
            bottom -2px 
            right -7px 
            height 20px 
            border-right 20px solid #494
            border-bottom-left-radius  16px 14px 
            -webkit-transform translate(0, -2px) 
         
        &:after
            content "" 
            position absolute 
            z-index 1 
            bottom -2px 
            right -56px 
            width 26px 
            height 20px 
            background light-main 
            border-bottom-left-radius  10px 
            -webkit-transform translate(-30px, -2px) 
         

    &__scrollable
        overflow auto
        flex-grow 1

    &__history
        width 100%

    &__future
        background-color red
        width 100%

    &__input
        padding 0.5em 1em
        border-radius 2em
        border 1px solid #d4d4d4
        outline none
